<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{pageTitle}
    link(rel="stylesheet", href="/css/main.css")
    block styles
  body
    header.main-header
      nav.main-header__nav
        ul.main-header__item-list
          li.main-header__item
            a(href="/", class=(path === '/' ? 'active' : '')) Index page
          li.main-header__item
            a(href="/product-list", class=(path === '/product-list' ? 'active' : '')) Product list
          if isLoggedIn
            li.main-header__item
              a(href="/cart", class=(path === '/cart' ? 'active' : '')) Cart
            li.main-header__item
              a(href="/orders", class=(path === '/orders' ? 'active' : '')) Orders
          if isLoggedIn
            li.main-header__item
              a(href="/admin/product-list", class=(path === '/admin/product-list' ? 'active' : '')) Admin Product list
            li.main-header__item
              a(href="/admin/add-product", class=(path === '/admin/add-product' ? 'active' : '')) Add Product
        ul.main-header__item-list
          if !isLoggedIn
            li.main-header__item
              a(href="/login", class=(path === '/login' ? 'active' : '')) Login
            li.main-header__item
              a(href="/signup", class=(path === '/signup' ? 'active' : '')) Signup
          if isLoggedIn
            li.main-header__item
              form(action='/logout' method='POST')
                input(type='hidden' name='_csrf' value=csrfToken)
                button.btn__nav(type='submit') Logout
    block content