extends ../templates/main-template.pug

block styles
  link(rel="stylesheet" href="/css/product-add-form.css")

block content
  main

    h1.product-form__header Login
    form.product-form(action="/login", method="POST")
      div.form-control
        label(for="email") Email
        input(type="email",name="email",id="email", value=oldInput ? oldInput.email : '', class = errorEmail ? 'invalid' : '')
        label(for="password") Password
        input(type="password",name="password",id="password", class = errorPass ? 'invalid' : '')
        input(type='hidden' name='_csrf' value=csrfToken) 
      button(type="submit") Login
    div.centered
      a(href='/reset-password') Reset password
    if error
      .user-message.user-message--error #{error}